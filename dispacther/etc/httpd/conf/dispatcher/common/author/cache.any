/cache
{
    /docroot "/mnt/var/www/html/author"
    /statfileslevel "2"
    /allowAuthorized "0"
    /serveStaleOnError "1"

    /rules
    {
        # Deny by default
        /0001 { /type "deny" /glob "*" }
    }

    /invalidate
    {
        /0000 { /type "deny" /glob "*" }
    }
}

